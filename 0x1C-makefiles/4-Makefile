CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	@echo "$(CC) $(CFLAGS) -c -o main.o main.c"
	@echo "$(CC) $(CFLAGS) -c -o school.o school.c"
	@echo "$(CC) $(OBJ) -o $(NAME)"

%.o: %.c
	@echo "$(CC) $(CFLAGS) -c -o $@ $<"
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	$(RM) *~ $(NAME) $(OBJ)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
